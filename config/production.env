# Production Environment Configuration
# Brokerage Platform - Production Settings

# Environment
NODE_ENV=production

# Database Configuration
DB_HOST=postgres-cluster.internal
DB_PORT=5432
DB_NAME=brokerage
DB_USER=brokerage_user
DB_PASSWORD=secure_production_password_here
DB_SSL=true
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=redis-cluster.internal
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_here
REDIS_TLS=true
REDIS_CLUSTER_MODE=true

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_RATE_LIMIT=1000
API_RATE_WINDOW=900000
API_TIMEOUT=30000
API_MAX_REQUEST_SIZE=10mb

# Security Configuration
CORS_ORIGIN=https://brokerage-platform.com
HELMET_CSP=true
RATE_LIMIT_ENABLED=true
SECURITY_HEADERS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=10mb
LOG_FILE_MAX_FILES=5
LOG_RETENTION_DAYS=30

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
HEALTH_CHECK_INTERVAL=30000

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here
SMTP_FROM=noreply@brokerage-platform.com

# SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Third-party API Keys
NADRA_API_URL=https://api.nadra.gov.pk
NADRA_API_KEY=your_nadra_api_key_here
JUMIO_API_URL=https://netverify.com/api/v4
JUMIO_API_TOKEN=your_jumio_api_token
JUMIO_API_SECRET=your_jumio_api_secret
ONFIDO_API_URL=https://api.onfido.com/v3
ONFIDO_API_TOKEN=your_onfido_api_token
TRULIOO_API_URL=https://api.globaldatacompany.com
TRULIOO_API_KEY=your_trulioo_api_key

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=least_conn
LOAD_BALANCER_HEALTH_CHECK=true
LOAD_BALANCER_MAX_FAILS=3
LOAD_BALANCER_FAIL_TIMEOUT=30s

# Auto-scaling Configuration
AUTO_SCALE_ENABLED=true
AUTO_SCALE_MIN_INSTANCES=2
AUTO_SCALE_MAX_INSTANCES=10
AUTO_SCALE_CPU_THRESHOLD=70
AUTO_SCALE_MEMORY_THRESHOLD=80

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
SERVICE_DISCOVERY_TYPE=consul
CONSUL_HOST=consul-cluster.internal
CONSUL_PORT=8500

# Message Queue Configuration
MESSAGE_QUEUE_TYPE=rabbitmq
RABBITMQ_HOST=rabbitmq-cluster.internal
RABBITMQ_PORT=5672
RABBITMQ_USER=brokerage_user
RABBITMQ_PASS=secure_rabbitmq_password_here
RABBITMQ_VHOST=/brokerage

# Event Bus Configuration
EVENT_BUS_ENABLED=true
EVENT_BUS_TYPE=kafka
KAFKA_BROKERS=kafka-cluster.internal:9092
KAFKA_CLIENT_ID=brokerage-platform
KAFKA_GROUP_ID=brokerage-consumers

# File Storage Configuration
FILE_STORAGE_TYPE=s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=brokerage-platform-files
S3_ENDPOINT=https://s3.amazonaws.com

# Cache Configuration
CACHE_TYPE=redis
CACHE_TTL=3600
CACHE_MAX_MEMORY=1gb
CACHE_EVICTION_POLICY=allkeys-lru

# Session Configuration
SESSION_TYPE=redis
SESSION_SECRET=your_session_secret_here
SESSION_TTL=86400
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_MAX_CONNECTIONS=10000
WEBSOCKET_MESSAGE_SIZE_LIMIT=1mb

# Performance Configuration
CLUSTER_MODE=true
CLUSTER_WORKERS=auto
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=brokerage-platform-backups

# Alerting Configuration
ALERTING_ENABLED=true
ALERT_EMAIL_ENABLED=true
ALERT_SMS_ENABLED=true
ALERT_WEBHOOK_ENABLED=true
ALERT_COOLDOWN=300
ALERT_MAX_FREQUENCY=10

# Feature Flags
FEATURE_ALGORITHMIC_TRADING=true
FEATURE_RISK_MONITORING=true
FEATURE_COMPLIANCE_ENGINE=true
FEATURE_FRAUD_DETECTION=true
FEATURE_TAX_OPTIMIZATION=true
FEATURE_PERFORMANCE_ANALYTICS=true
FEATURE_MARKET_DATA_PROCESSING=true
FEATURE_CUSTOM_REPORTING=true
FEATURE_ZERO_TRUST_SECURITY=true
FEATURE_INTEGRATION_HUB=true
FEATURE_NOTIFICATION_SYSTEM=true
FEATURE_INTELLIGENT_KYC=true
FEATURE_IDENTITY_VERIFICATION=true
FEATURE_ONBOARDING_ORCHESTRATOR=true
