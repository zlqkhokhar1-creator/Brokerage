# =================================
# Environment Configuration Template
# =================================
# Copy this file to .env and configure with your actual values
# WARNING: Never commit real secrets to version control

# Node Environment
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info

# JWT Configuration - REQUIRED
JWT_ISSUER=brokerage-api
JWT_AUDIENCE=brokerage-web
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
JWT_ALG=RS256

# JWT Keys for RS256 (recommended for production)
# Generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY_PATH=./keys/jwt-private.pem
JWT_PUBLIC_KEY_PATH=./keys/jwt-public.pem

# Alternative: JWT Keys as environment variables (escape newlines as \n)
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nMIIB...\n-----END PUBLIC KEY-----"

# JWT Secrets for HS256 (fallback for local development)
# Only use if JWT_ALG=HS256
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars

# HTTP Server
HTTP_PORT=3000

# Database Configuration (optional for this phase)
DATABASE_URL=postgresql://user:password@localhost:5432/brokerage_db
REDIS_URL=redis://localhost:6379

# Existing Supabase Configuration (if used)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_DB_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Additional Security Settings (future expansion)
# SESSION_SECRET=your-session-secret-min-32-chars
# ENCRYPTION_KEY=your-encryption-key-32-chars
# API_KEY_SECRET=your-api-key-secret

# External Services (placeholders for future)
# KMS_KEY_ID=your-kms-key-id
# VAULT_URL=https://vault.example.com
# VAULT_TOKEN=your-vault-token