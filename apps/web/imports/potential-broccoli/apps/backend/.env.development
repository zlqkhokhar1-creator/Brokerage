# Development Environment Configuration
# Optimized for local development with enhanced key management

NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database - Use local PostgreSQL or Docker
DATABASE_URL=postgresql://investpro:secure_password_123@localhost:5432/brokerage

# Redis - Local instance
REDIS_URL=redis://localhost:6379

# Enhanced Key Management for Development
USE_MANAGED_KEYS=true
USE_LOCAL_DEV_KEYS=true
KEY_ROTATION_INTERVAL_HOURS=1

# Fallback secrets (for compatibility testing)
JWT_SECRET=development-jwt-secret-do-not-use-in-production
JWT_REFRESH_SECRET=development-refresh-secret-do-not-use-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS - Allow local development
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Security - Relaxed for development
BCRYPT_ROUNDS=8

# Feature Flags - All enabled for testing
ENABLE_2FA=true
ENABLE_RATE_LIMITING=false
ENABLE_AUDIT_LOGGING=true

# Development specific
LOG_LEVEL=debug
ENABLE_DEBUG_ENDPOINTS=true