# Backend Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/brokerage
# Alternative: Supabase
# DATABASE_URL=postgresql://postgres:password@db.project.supabase.co:5432/postgres

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration (Backward Compatibility)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Key Management System (Phase 1b Enhancement)
# Enable managed key rotation (recommended for production)
USE_MANAGED_KEYS=true
# Key rotation interval in hours (default: 24)
KEY_ROTATION_INTERVAL_HOURS=24

# Local Development Keys (development only)
# Enable ephemeral keys for local development
USE_LOCAL_DEV_KEYS=false

# Frontend URLs (CORS Configuration)
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Security Configuration
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_2FA=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# External Service Configuration
# Add your external API keys here
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...