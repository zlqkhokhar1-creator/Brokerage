{
  "name": "brokerage-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/blocks/*"
  ],
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "db:migrate": "ts-node scripts/migrate.ts",
    "db:migrate:plan": "ts-node scripts/migrate.ts --plan",
    "db:drift-check": "ts-node scripts/run-drift-check.ts"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "dotenv": "^16.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@notifee/react-native": "^9.1.8",
    "expo-notifications": "^0.31.4",
    "framer-motion": "^12.23.12",
    "kysely": "^0.28.5",
    "node-fetch": "^2.7.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2",
    "zod": "^4.1.8"
  }
}
