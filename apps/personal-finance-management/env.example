# Personal Finance Management Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=personal_finance
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Personal Finance Management <noreply@yourdomain.com>

# SMS Configuration (for Pakistani providers)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Pakistani Payment Gateways
JAZZCASH_MERCHANT_ID=your-jazzcash-merchant-id
JAZZCASH_PASSWORD=your-jazzcash-password
EASYPAISA_MERCHANT_ID=your-easypaisa-merchant-id
EASYPAISA_PASSWORD=your-easypaisa-password

# NADRA Integration (Pakistan)
NADRA_API_URL=https://api.nadra.gov.pk
NADRA_API_KEY=your-nadra-api-key
NADRA_API_SECRET=your-nadra-api-secret

# Raast Integration (Pakistan)
RAAST_API_URL=https://api.raast.gov.pk
RAAST_CLIENT_ID=your-raast-client-id
RAAST_CLIENT_SECRET=your-raast-client-secret

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Feature Flags
ENABLE_AI_CATEGORIZATION=true
ENABLE_SMS_PARSING=true
ENABLE_RECEIPT_SCANNING=true
ENABLE_FINANCIAL_HEALTH_ANALYSIS=true
ENABLE_INVESTMENT_ADVICE=true
ENABLE_ANOMALY_DETECTION=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Background Jobs
ENABLE_CRON_JOBS=true
CRON_TIMEZONE=Asia/Karachi

# API Keys for External Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_VISION_API_KEY=your-google-vision-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Development/Testing
DEBUG=true
MOCK_EXTERNAL_APIS=false
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/personal_finance_test
