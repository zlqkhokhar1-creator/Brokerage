{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ui": ["packages/ui/src/index.ts"],
      "@ui/*": ["packages/ui/src/*"],
      "@utils": ["packages/utils/src/index.ts"],
      "@utils/*": ["packages/utils/src/*"],
      "@types": ["packages/types/src/index.ts"],
      "@types/*": ["packages/types/src/*"]
    }
  }
}
