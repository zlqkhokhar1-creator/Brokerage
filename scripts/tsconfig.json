{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@b-app/*": ["packages/*/src"]
    },
    "types": ["node"]
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "../node_modules/@types/react-native"
  ]
}